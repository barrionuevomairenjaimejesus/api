<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Muertes por contaminantes</title>
  </head>
  <body>

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">
      Gráfico representativo de las muertes por  según que contaminante
    </p>
</figure>

<style type="text/css">

.highcharts-figure, .highcharts-data-table table {
    min-width: 500px;
    max-width: 1500px;
    min-height: 800px;
    max-height: 1800px;
    margin: 1em auto;
}

.highcharts-data-table table {
	font-family: Verdana, sans-serif;
	border-collapse: collapse;
	border: 1px solid #EBEBEB;
	margin: 10px auto;
	text-align: center;
	width: 100%;
	max-width: 500px;
}
.highcharts-data-table caption {
    padding: 1em 0;
    font-size: 1.2em;
    color: #555;
}
.highcharts-data-table th {
	font-weight: 600;
    padding: 0.5em;
}
.highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
    padding: 0.5em;
}
.highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
    background: #f8f8f8;
}
.highcharts-data-table tr:hover {
    background: #f1f7ff;
}
</style>

<script type="text/javascript">
Highcharts.chart('container', {

    title: {
        text: 'Años perdidos por los contaminantes'
    },

    subtitle: {
        text: 'por paises europeos'
    },

    yAxis: {
        title: {
            text: 'Número de muertes por el contaminante'
        }
    },

    xAxis: {

    categories: [
               <% for(var i=0; i < muertes_prematuras.length; i++) { %>
                  '<%= muertes_prematuras[i].Country %>',
               <% } %>
            ]
    },

    series: [{
        name: 'PM2.5',
        data: [
          <% for(var i=0; i < muertes_prematuras.length; i++) { %>
             <%= muertes_prematuras[i].Anual_mean_PM25 %>,
          <% } %>
        ]
    }, {
        name: 'NO2',
        data: [
          <% for(var i=0; i < muertes_prematuras.length; i++) { %>
             <%= muertes_prematuras[i].Anual_mean_NO2 %>,
          <% } %>
        ]
    }, {
        name: 'O3',
        data: [
          <% for(var i=0; i < muertes_prematuras.length; i++) { %>
             <%= muertes_prematuras[i].Anual_mean_O3 %>,
          <% } %>
        ]
    }],
});
    responsive: {
        rules: [{
            condition: {
                maxWidth: 1000
            },
            chartOptions: {
                legend: {
                    layout: 'horizontal',
                    align: 'center',
                    verticalAlign: 'bottom'
                }
            }
        }]
    }
</script>
</body>
</html>
